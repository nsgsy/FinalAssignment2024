import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;

public class FinalAssignment2024 {
    public static void main(String[] args) {
        // プログラムの実行部分
        System.out.println("プログラムを実行しています...");

        // ログフォルダの作成
        String logDirPath = "log";
        File logDir = new File(logDirPath);
        if (!logDir.exists()) {
            if (logDir.mkdir()) {
                System.out.println("ログフォルダを作成しました: " + logDirPath);
            } else {
                System.err.println("ログフォルダの作成に失敗しました: " + logDirPath);
                return;
            }
        }

        // ログファイルの作成
        String logFileName = "execution_log.txt";
        File logFile = new File(logDirPath + File.separator + logFileName);
        try (BufferedWriter writer = new BufferedWriter(new FileWriter(logFile, true))) {
            String timeStamp = LocalDateTime.now().format(DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss"));
            writer.write("プログラムが実行されました: " + timeStamp);
            writer.newLine();
            System.out.println("ログファイルに書き込みました: " + logFile.getAbsolutePath());
        } catch (IOException e) {
            System.err.println("ログファイルの書き込み中にエラーが発生しました: " + e.getMessage());
        }
    }
}
